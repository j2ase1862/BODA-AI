<Window x:Class="BODA_VISION_AI.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BODA_VISION_AI"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="Manual"
        Left="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Left}"
        Top="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Top}"
        Width="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
        Height="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Style="{StaticResource MenuBarStyle}">
            <!-- 상단 탭 -->
            <Menu.ItemContainerStyle>
                <Style TargetType="MenuItem" BasedOn="{StaticResource TopMenuItemStyle}"/>
            </Menu.ItemContainerStyle>

            <!-- File 메뉴 -->
            <MenuItem Header="_File">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="_New" Style="{StaticResource SubMenuItemFullStyle}" Command="{Binding NewCommand}"/>
                <MenuItem Header="_Open" Style="{StaticResource SubMenuItemFullStyle}" Command="{Binding OpenCommand}"/>
                <Separator Foreground="#606060"/>
                <MenuItem Header="_Exit" Style="{StaticResource SubMenuItemFullStyle}" Command="{Binding CloseCommand}"/>
            </MenuItem>

            <!-- Edit 메뉴 -->
            <MenuItem Header="_Edit">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="_Copy" Style="{StaticResource SubMenuItemFullStyle}"/>
                <MenuItem Header="_Paste" Style="{StaticResource SubMenuItemFullStyle}"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <!-- 메인 콘텐츠 영역 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#333333" BorderThickness="0,0,1,0">
                <TreeView ItemsSource="{Binding ToolTree}" 
                  Background="Transparent" Foreground="White" BorderThickness="0">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Tools}">
                            <TextBlock Text="{Binding CategoryName}" Foreground="LightGray" FontWeight="Bold"/>
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                        PreviewMouseMove="ToolItem_PreviewMouseMove">
                                        <TextBlock Text="{Binding Name}" Foreground="White"/>
                                    </StackPanel>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>

            <Border Grid.Column="1" Background="Black" 
            AllowDrop="True" Drop="Sidebar2_Drop">
                <ItemsControl ItemsSource="{Binding DroppedTools}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D30" Margin="10" Padding="20" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" Foreground="Gold" HorizontalAlignment="Center"/>
                                    <ContentControl Content="{Binding ToolType}" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </Grid>
</Window>
