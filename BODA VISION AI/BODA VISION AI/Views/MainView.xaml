<Window x:Class="BODA_VISION_AI.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BODA_VISION_AI"
        xmlns:ts="clr-namespace:BODA_VISION_AI.Views.ToolSettings"
        xmlns:controls="clr-namespace:BODA_VISION_AI.Controls"
        mc:Ignorable="d"
        Title="BODA VISION AI - OpenCvSharp Vision System"
        WindowStartupLocation="Manual"
        Left="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Left}"
        Top="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Top}"
        Width="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
        Height="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- 버튼 스타일 -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#999999"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1084D8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 도구 아이템 스타일 -->
        <Style x:Key="ToolItemBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                    <Setter Property="Background" Value="#0078D4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Style="{StaticResource MenuBarStyle}">
            <Menu.ItemContainerStyle>
                <Style TargetType="MenuItem" BasedOn="{StaticResource TopMenuItemStyle}"/>
            </Menu.ItemContainerStyle>

            <MenuItem Header="_File">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="Open Image File"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding OpenImageFileCommand}"
                          InputGestureText="Ctrl+O"/>
                <Separator Foreground="#606060"/>
                <MenuItem Header="Exit"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding CloseCommand}"/>
            </MenuItem>

            <MenuItem Header="_Tools">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="Run All Tools"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding RunAllCommand}"
                          InputGestureText="F5"/>
                <MenuItem Header="Run Selected Tool"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding RunSelectedCommand}"
                          InputGestureText="F6"/>
                <Separator Foreground="#606060"/>
                <MenuItem Header="Clear All Tools"
                          Style="{StaticResource SubMenuItemFullStyle}"
                          Command="{Binding ClearToolsCommand}"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Style="{StaticResource TransparentMenuPanelStyle}"/>
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="About" Style="{StaticResource SubMenuItemFullStyle}"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#2D2D30" Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <Button Content="Open Image"
                        Command="{Binding OpenImageFileCommand}"
                        Style="{StaticResource ToolbarButtonStyle}"/>
                <Button Content="Run All"
                        Command="{Binding RunAllCommand}"
                        Style="{StaticResource ToolbarButtonStyle}"/>
                <Button Content="Run Selected"
                        Command="{Binding RunSelectedCommand}"
                        Style="{StaticResource ToolbarButtonStyle}"/>
                <Separator Margin="10,0" Background="#555555" Width="1"/>
                <Button Content="Train Pattern"
                        Command="{Binding TrainPatternCommand}"
                        Style="{StaticResource ToolbarButtonStyle}"/>
                <Separator Margin="10,0" Background="#555555" Width="1"/>
                <Button Content="Clear All"
                        Command="{Binding ClearToolsCommand}"
                        Style="{StaticResource DangerButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Tool Palette -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#333333" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Tool Palette"
                               Foreground="#FFD700" FontWeight="Bold" FontSize="14"
                               Margin="10,10,10,5"/>

                    <TreeView Grid.Row="1" ItemsSource="{Binding ToolTree}"
                              Background="Transparent" Foreground="White" BorderThickness="0"
                              Margin="5">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="True"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Tools}">
                                <TextBlock Text="{Binding CategoryName}"
                                           Foreground="#FFD700" FontWeight="Bold" FontSize="12"/>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#3E3E42" CornerRadius="3"
                                                Padding="8,4" Margin="0,2"
                                                PreviewMouseMove="ToolItem_PreviewMouseMove"
                                                Cursor="Hand">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="White" FontSize="11"
                                                           VerticalAlignment="Center"/>
                                                <controls:HelpIcon ToolType="{Binding ToolType}"
                                                                   Margin="6,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Center Panel - Workspace and Images -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Dropped Tools Workspace -->
                <Border Grid.Row="0" Background="#1E1E1E" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Tool Workspace (Drag tools here)"
                                   Foreground="Gray" FontSize="12" Margin="10,5"/>

                        <!-- 연결선 및 도구 워크스페이스 컨테이너 -->
                        <Grid Grid.Row="1" AllowDrop="True" Drop="Sidebar2_Drop" Background="#2D2D30">
                            <!-- 연결선 렌더링 캔버스 (도구 아래에 그려짐) -->
                            <Canvas x:Name="ConnectionCanvas" IsHitTestVisible="False"/>

                            <!-- 연결 모드 진행 중 안내 텍스트 -->
                            <TextBlock x:Name="ConnectionModeHint"
                                       Text=""
                                       Foreground="#FFEB3B" FontSize="12" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"
                                       Margin="0,5,0,0" Visibility="Collapsed"/>

                            <!-- 도구 아이템 표시 -->
                            <ItemsControl x:Name="WorkspaceArea"
                                          ItemsSource="{Binding DroppedTools}"
                                          Background="Transparent">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ToolItemBorderStyle}"
                                                MouseLeftButtonDown="Item_MouseLeftButtonDown"
                                                MouseMove="Item_MouseMove"
                                                MouseLeftButtonUp="Item_MouseLeftButtonUp"
                                                MouseRightButtonDown="Item_MouseRightButtonDown">
                                            <Border.ContextMenu>
                                                <ContextMenu>
                                                    <ContextMenu.Style>
                                                        <Style TargetType="ContextMenu">
                                                            <Setter Property="Background" Value="#2D2D30"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter Property="BorderBrush" Value="#555555"/>
                                                        </Style>
                                                    </ContextMenu.Style>
                                                    <MenuItem Header="Connect Image"
                                                              Tag="Image"
                                                              Click="ConnectMenuItem_Click">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="10" Height="10" Fill="#4CAF50"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Connect Coordinates"
                                                              Tag="Coordinates"
                                                              Click="ConnectMenuItem_Click">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="10" Height="10" Fill="#2196F3"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Connect Result"
                                                              Tag="Result"
                                                              Click="ConnectMenuItem_Click">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="10" Height="10" Fill="#FF9800"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <Separator Background="#555555"/>
                                                    <MenuItem Header="Remove Connections"
                                                              Click="RemoveConnectionsMenuItem_Click"/>
                                                    <Separator Background="#555555"/>
                                                    <MenuItem Header="Delete Tool"
                                                              Click="DeleteToolMenuItem_Click"
                                                              Foreground="#FF5252"/>
                                                </ContextMenu>
                                            </Border.ContextMenu>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="White" FontWeight="SemiBold"
                                                           VerticalAlignment="Center"/>
                                                <Button Content="X"
                                                        Command="{Binding DataContext.RemoveToolCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent" Foreground="Red"
                                                        BorderThickness="0" Padding="5,0"
                                                        Margin="10,0,0,0" Cursor="Hand"
                                                        FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- 연결 모드에서 임시 연결선 표시 캔버스 -->
                            <Canvas x:Name="TempConnectionCanvas" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                </Border>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                              Background="#333333" Cursor="SizeNS"/>

                <!-- Image Display Area -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Original Image with ROI Editor -->
                    <Border Grid.Column="0" Background="#1E1E1E" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Original Image (ROI Editor)"
                                       Foreground="Gray" FontSize="12" Margin="10,5"/>
                            <controls:ImageCanvas x:Name="ImageCanvasControl" Grid.Row="1"
                                                  SourceImage="{Binding SourceMat, Mode=OneWay}"
                                                  ROICollection="{Binding ROIShapes, Mode=TwoWay}"
                                                  SelectedROI="{Binding SelectedROI, Mode=TwoWay}"
                                                  ROICreated="ImageCanvas_ROICreated"
                                                  ROIModified="ImageCanvas_ROIModified"
                                                  ROISelectionChanged="ImageCanvas_ROISelectionChanged"
                                                  Margin="5"/>
                        </Grid>
                    </Border>

                    <!-- Result Image -->
                    <Border Grid.Column="1" Background="#1E1E1E" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,5">
                                <TextBlock Text="Result Image"
                                           Foreground="Gray" FontSize="12"
                                           VerticalAlignment="Center"/>
                                <Button Content="Clear" Click="ClearResultImage_Click"
                                        Background="#3C3C3C" Foreground="White"
                                        BorderBrush="#555555" BorderThickness="1"
                                        Padding="8,2" Margin="10,0,0,0"
                                        FontSize="11" Cursor="Hand"/>
                            </StackPanel>
                            <Image Grid.Row="1" x:Name="ResultImageDisplay"
                                   Source="{Binding ResultImage}"
                                   Stretch="Uniform" Margin="5"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Right Panel - Tool Settings -->
            <Border Grid.Column="2" Background="#252526" BorderBrush="#333333" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Tool Settings"
                               Foreground="#FFD700" FontWeight="Bold" FontSize="14"
                               Margin="10,10,10,5"/>

                    <ts:ToolSettingsView Grid.Row="1"
                                         DataContext="{Binding SelectedVisionTool}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="White" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding ExecutionTimeText}"
                           Foreground="White" VerticalAlignment="Center"
                           Margin="20,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Tools: " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DroppedTools.Count}"
                               Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
